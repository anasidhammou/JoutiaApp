<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products.DetailsTypeProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:id="@+id/searchEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="@string/recherche_sur_joutia"
                    android:padding="10dp"
                    android:background="@drawable/edittextstyle"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:onClick="goPanier"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_panier"/>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/viewPager">

                    </androidx.viewpager2.widget.ViewPager2>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Image_prod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </LinearLayout>


                <TextView
                    android:id="@+id/nom_Prod"
                    android:textAlignment="textStart"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----------------" />


                <TextView
                    android:id="@+id/prix_prod"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="22dp"
                    android:textColor="@color/color_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---------------" />


                <View
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_app"/>






                <TextView
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_du_produit" />


                <TextView
                    android:id="@+id/description"
                    android:textAlignment="textStart"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


                <View
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_app"/>



                <TextView
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/d_tails_de_produit" />

                <TextView
                    android:id="@+id/etatprod"
                    android:textAlignment="textStart"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />




                <View
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_app"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/pictures"
                        android:layout_marginLeft="20dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profils"/>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DÃ©tail du vendeur :" />

                        <TextView
                            android:id="@+id/nommagasin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="----------------"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/phone"
                            android:textAlignment="textStart"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---------------" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">


                <LinearLayout
                    android:gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:onClick="callVendeur"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/color_app"
                        android:text="@string/appelez"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>


                    <Button
                        android:onClick="goAdd"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/purple"
                        android:text="@string/acheter"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />


                </LinearLayout>


            </LinearLayout>








        </LinearLayout>
    </ScrollView>


</LinearLayout>